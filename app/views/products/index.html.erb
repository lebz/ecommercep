<div style="background-color:#efefef; color:black;">
<h1>Listing products</h1>

<table>
  <tr>
    <th style="align:left;">Title</th>
    <th style="align:left;">Description</th>
    <th style="align:left;">Image url</th>
    <th style="align:left;">Price</th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr style="align:left;">
    <td style="align:left;"><span class="list-title"><%= product.title %></span></td>
    <td style="align:left;"><%= product.description %></td>
    <td style="align:left;"><%= product.image_url %></td>
    <td style="align:left;"><%= product.price %></td>
    <td style="align:left;"><%= link_to 'Show', product %></td>
    <td style="align:left;"><%= link_to 'Edit', edit_product_path(product) %></td>
    <td style="align:left;"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product', new_product_path %>
</div>


